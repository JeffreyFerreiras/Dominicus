@page
@model IndexModel
@{
    ViewData["Title"] = "Dominicus";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-5">
                <h1 class="display-4 dominican-header">Dominicus</h1>
                <p class="lead">Ask me anything and I'll respond in Dominican Spanish!</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-body position-relative">
                    <form method="post">
                        <div class="form-group">
                            <textarea asp-for="Question" class="form-control form-control-lg" 
                                    rows="3" placeholder="Type your question here..."></textarea>
                            <span asp-validation-for="Question" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg mt-3 w-100">
                            Ask Dominicus
                        </button>
                    </form>
                    <div class="plantain-decoration"></div>
                </div>
            </div>

            @if (Model.CurrentConversation != null)
            {
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <strong>Your Question:</strong> @Model.CurrentConversation.Question
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5 class="text-primary">English Response:</h5>
                            <p class="lead">@Model.CurrentConversation.EnglishResponse</p>
                        </div>
                        <div>
                            <h5 class="text-primary">Dominican Response:</h5>
                            <p class="lead">@Model.CurrentConversation.DominicanResponse</p>
                        </div>
                    </div>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Suggested Questions</h4>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var question in Model.SuggestedQuestions)
                        {
                            <button class="list-group-item list-group-item-action suggested-question">
                                @question
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.suggested-question').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector('#Question').value = this.textContent.trim();
            });
        });
    </script>
}
